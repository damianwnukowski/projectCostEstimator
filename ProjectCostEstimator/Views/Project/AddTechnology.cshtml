@model ProjectCostEstimator.Models.AddTechnologyViewModel

@{
    ViewBag.Title = "Dodaj technologię";
}

<h2>Doda</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProjectID);

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TechnologyDefinitionID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TechnologyDefinitionID", new SelectList(Model.Definitions, "ID", "Name"))
                @Html.ValidationMessageFor(model => model.TechnologyDefinitionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Anuluj", "Details", new { id = Model.ProjectID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
